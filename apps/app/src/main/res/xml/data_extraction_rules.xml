<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="auth_prefs.xml"/>
        <exclude domain="database" path="choir_database"/>
    </cloud-backup>
    <device-transfer>
        <!-- Allow device transfer for non-sensitive data -->
        <include domain="sharedpref" path="user_preferences.xml"/>
    </device-transfer>
</data-extraction-rules>
